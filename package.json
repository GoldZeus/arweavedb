{
  "name": "arweavedb",
  "version": "1.0.5",
  "description": "Read and write data to the Arweave Blockchain Database",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "arweave",
    "blockchain",
    "database"
  ],
  "author": {
    "name": "Cedrik Boudreau",
    "email": "cedrik.git@tryninja.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoldZeus/arweavedb.git"
  },
  "bugs": {
    "url": "https://github.com/GoldZeus/arweavedb/issues"
  },
  "license": "GPL-3.0",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "26.0.13",
    "@types/node": "14.14.7",
    "jest": "26.4.2",
    "prettier": "2.1.1",
    "ts-jest": "26.3.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.0.2"
  },
  "dependencies": {
    "fast-glob": "^3.2.4"
  }
}
